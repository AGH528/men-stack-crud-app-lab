<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Index</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Books Index</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Genre</th>
          <th>Year</th>
        </tr>
      </thead>
      <tbody>
        <% if (books.length > 0) { %>
          <% books.forEach(book => { %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.author %></td>
              <td><%= book.genre %></td>
              <td><%= book.year || 'N/A' %></td> 
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4">No books found. Add some!</td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <a href="/books/new" class="btn">Add New Book</a>
  </div>
</body>
</html>
